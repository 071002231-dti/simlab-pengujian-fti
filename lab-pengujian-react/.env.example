# SimLab Pengujian FTI UII - Environment Configuration
# Copy this file to .env.local for development or set these in docker-compose.yml for production

# =============================================================================
# API Configuration
# =============================================================================

# Backend API URL (Laravel)
# Development: http://localhost:8000/api
# Docker: http://backend:8000/api (uses Docker network)
# Production: https://api.yourdomain.com/api
VITE_API_BASE_URL=http://localhost:8000/api

# Use mock data (set to 'false' when Laravel backend is ready)
VITE_USE_MOCK_DATA=true

# =============================================================================
# Docker Runtime Variables (used in docker-compose.yml)
# =============================================================================
# These are injected at container startup via env-config.js

# API_BASE_URL=http://backend:8000/api
# USE_MOCK_DATA=false
